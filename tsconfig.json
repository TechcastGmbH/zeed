{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist/esm",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "types": ["node", "jest"],
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/**/*.spec.ts"]
}
