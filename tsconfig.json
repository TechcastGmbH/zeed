{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2020",
    "types": [
      "node",
      "vitest/globals"
    ]
  },
  "exclude": [
    "_archive",
    "node_modules",
    "dist"    
  ],
  "include": [
    "src/**/*",
    "vitest-setup.ts"
  ]
}
